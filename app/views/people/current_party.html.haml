%h1= "#{@person.full_name} - #{t('.title', current: t('current'), party: t('party'))}"

- unless @party.nil?
  .block
    %ol.list__item
      %h2= link_to(@party.name, party_path(@party.graph_id))
      %li= "#{l(@party.party_memberships.first.start_date, format: :default)} to Present" unless @party.party_memberships.first.start_date.nil?

