- page_title = title(t('house_plural').capitalize)

%h1= page_title

- @houses.each do |house|
  .block
    .list__item
      %h2= link_to(house.name, house_path(house.graph_id))
      - if HousesHelper.commons?(house)
        %p= "#{t('view_all').capitalize} #{t('.all_mps_info')}"
      - else
        %p= "#{t('view_all').capitalize} #{t('.all_lords_info')}"
